<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:View="clr-namespace:Cinema.View" x:Class="Cinema.MainWindow"
        ResizeMode="CanMinimize"    
        Title="Cinema" Height="539" Width="816" Background="Black" Icon="/Cinema;component/Pictures/ic_launcher.png">
    <Canvas x:Name="mainContainer">
      <Canvas x:Name="userControlContainer" Height="auto">
            <View:StartingUserControl x:Name="startingUserControl" Visibility="Visible"/>
            <View:SignIn x:Name="signIn" Visibility="Hidden"/>
            <View:SignUp x:Name="signUp" Visibility="Hidden"/>
            <View:Movies x:Name="movies" Visibility="Hidden"/>
            <View:MovieInformation x:Name="movieInformation" Visibility="Hidden"/>
            <View:SeatBooking x:Name="seatBooking" Visibility="Hidden"/>
            <View:AddMovie x:Name="addMovie" Visibility="Hidden"/>
            <View:AdminStartWindow x:Name="adminWindow" Visibility="Hidden"/>
            <View:Users x:Name="users" Visibility="Hidden"/>
        </Canvas>
    </Canvas>
</Window>
